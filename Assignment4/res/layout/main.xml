<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:baselineAligned="false" android:layout_width="fill_parent" android:layout_height="fill_parent" android:orientation="vertical" android:background="#F7E3B5" android:onClick="erase">
    <TextView android:id="@+id/usernametext" android:layout_width="wrap_content" android:text="Username:" android:layout_height="wrap_content"></TextView>
    <EditText android:layout_height="wrap_content" android:layout_width="fill_parent" android:id="@+id/usertext" android:text="" android:textColor="#9A9797" android:typeface="serif" android:maxLength="32"></EditText>
    <TextView android:id="@+id/password" android:layout_width="wrap_content" android:text="Password:" android:layout_height="wrap_content"></TextView>
    <EditText android:text="" android:id="@+id/passwordtext" android:layout_height="wrap_content" android:layout_width="fill_parent"></EditText>
    <Button android:text="Login now" android:id="@+id/loginbutton" android:layout_width="wrap_content" android:layout_height="wrap_content"></Button>
</LinearLayout>
